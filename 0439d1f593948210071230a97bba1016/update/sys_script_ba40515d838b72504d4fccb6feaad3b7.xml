        <script><![CDATA[(function executeRule(current, previous) {

    // Skip if parameters field is empty
    if (!current.u_parameters) {
        return;
    }

    var params = current.u_parameters.toString();
    
    try {
        var parsed = JSON.parse(params);
        // Format with 2-space indentation
        current.u_parameters = JSON.stringify(parsed, null, 2);
    } catch (e) {
        gs.addErrorMessage('Invalid JSON in Parameters field: ' + e.message);
        current.setAbortAction(true);
    }

})(current, previous);]]></script>
